<Page x:Class="WpfApp3.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Градусы по цельсию" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Grid.Column="1" x:Name="Text1"/>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Height="75" Width="500" VerticalScrollBarVisibility="Visible" IsReadOnly="True"
                 x:Name="Text2"/>
        <Button Content="Ответ" Click="Button_Click" Grid.ColumnSpan="2" Grid.Row="2" Width="150"/>
    </Grid>
</Page>
